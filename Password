<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Strength Indicator</title>
</head>
<body>
    <label for="password">Password:</label>
    <input type="password" id="password" oninput="checkPasswordStrength(this.value)">
    <p id="password-strength"></p>

    <script>
        function checkPasswordStrength(password) {
            var strengthIndicator = document.getElementById("password-strength");
            var strongRegex = new RegExp("^(?=.{9,})(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#\$%\^&\*])");
            var mediumRegex = new RegExp("^(?=.{7,})(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])");
            var weakRegex = new RegExp("^(?=.{5,})");

            if (strongRegex.test(password)) {
                strengthIndicator.innerText = "Strong";
                strengthIndicator.style.color = "green";
            } else if (mediumRegex.test(password)) {
                strengthIndicator.innerText = "Medium";
                strengthIndicator.style.color = "orange";
            } else if (weakRegex.test(password)) {
                strengthIndicator.innerText = "Weak";
                strengthIndicator.style.color = "red";
            } else {
                strengthIndicator.innerText = "Very Weak";
                strengthIndicator.style.color = "red";
            }
        }
    </script>
</body>
</html>
